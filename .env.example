ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL=claude-sonnet-4-6
EMBEDDING_MODEL_PATH=./models/paraphrase-multilingual-MiniLM-L12-v2
CLAUDE_MAX_TOKENS=25000

# Extended thinking budget (0 = disabled, e.g. 10000 for complex tasks).
# When set, the API request includes {"thinking": {"type": "enabled", "budget_tokens": N}}.
# max_tokens is automatically set to budget_tokens + 4096.
# CLAUDE_THINKING_BUDGET_TOKENS=10000

# Adaptive thinking (Claude Opus 4.6 and Sonnet 4.6 only).
# When enabled, Claude dynamically decides when and how much to think.
# Adaptive mode takes precedence over CLAUDE_THINKING_BUDGET_TOKENS.
# API sends: {"thinking": {"type": "adaptive"}} + optional {"output_config": {"effort": "..."}}
CLAUDE_THINKING_ADAPTIVE=true

# Adaptive thinking effort level (only used when CLAUDE_THINKING_ADAPTIVE=true).
# Controls how much thinking Claude allocates. Invalid values are silently ignored.
# Values: low | medium | high  (high is the API default)
# NOTE: "max" is NOT accepted here â€” it is Opus 4.6 only and causes API errors on
#       Sonnet 4.6 and other models. Set it directly in the API request if needed.
CLAUDE_THINKING_EFFORT=medium
